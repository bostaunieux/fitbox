h3.title Log a New Workout
form.content.form-horizontal
  input[type="hidden" name="lift_id" value="#{lift.id}"]

  div.control-group
    div.control-label.date
      label[for="date"] Date
    div.controls
      div.input-append
        - if @page_data && @page_data[:isMobile]
          input[type="date" name="date" value="#{Time.now.strftime('%Y-%m-%d')}"]
        - else
          input.input-small[type="text" name="date"]
          span.add-on: i.icon-calendar

  div.control-group
    div.control-label.repetitions
      label[for="repetitions"] Reps
    div.controls
      label.radio.inline
        input[type="radio" name="repetitions" value="1"]
          ' 1
      label.radio.inline
        input[type="radio" name="repetitions" value="3"]
          ' 3
      label.radio.inline
        input[type="radio" name="repetitions" value="5"]
          ' 5
      label.radio.inline
        input[type="radio" name="repetitions" value="Other"]
          ' Other
    div.controls
      select.input-mini.hide[name="reps-other"]
        - 1.upto(10) do |i|
          option #{i}
      
  div.control-group
    div.control-label.weight
      label[for="weight"] Weight
    div.controls
      div.input-append
        input.input-mini[type="text" name="weight" pattern="[0-9]*"]
        span.add-on lbs

  div.control-group
    div.controls
      button.btn.btn-primary[type="submit" role="addEntry"] Add
